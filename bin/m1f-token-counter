#!/usr/bin/env bash
# token-counter - Count tokens in files

# Get the real path of this script
SCRIPT_PATH="$(readlink -f "$0" 2>/dev/null || realpath "$0" 2>/dev/null || echo "$0")"
BIN_DIR="$(dirname "$SCRIPT_PATH")"
PROJECT_ROOT="$(dirname "$BIN_DIR")"

# Activate virtual environment and run token-counter
cd "$PROJECT_ROOT" && source .venv/bin/activate && exec python "$PROJECT_ROOT/tools/token_counter.py" "$@"